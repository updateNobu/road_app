<div class="maketitle">
<h3 class="makename">ログイン</h3>
</div>
<% if @error_massage %>
  <div class="erorr">
    <%= @error_massage %>
  </div>
<%end%>
<div class="inputlogin">
<%=form_tag("/login") do %>
　<p class="mailtitle">メールアドレス</p>
　<input type="email" value= "<%= @email %>" name="email" class="mailinput">
　
　<p class="passtitle">パスワード</p>
　<input type="password" value= "<%= @password %>" name="password" class="passinput">
　
　<input type="submit" value="ログイン" name="normal" class="loginpush">
<%end%>
　<%= link_to("簡単ログイン", "/logineasy", {method: "post", class: "loginpusheasy"})%>
　<p class="detaileasy">※簡単ログインはポートフォリオ閲覧用です。メールアドレスやパスワードは必要ありません
</p>
</div>