<h3>My roadmap edit</h3>
<h1>My ロードマップ</h1>
<%= link_to("ロードマップを新規作成する", "#")%>
<%= link_to("お気に入りからロードマップにする", "#")%>
<%= link_to("自分の投稿からロードマップにする", "#")%>
<% @mymaps.each do |map| %>
      <%= map.content %>
      <%= map.method %>
      <%= "#{map.time_required}分" %>
      <%= map.comment %>
      <%= link_to("編集", "/roadmap/medit/#{map.id}")%>
      <%= link_to("削除", "/roadmap/destroymap/#{map.id}", {method: "post"}) %>
  <% end %>
  <% if flash[:notice]%>
 <div>
   <%= flash[:notice]%>
 </div>
<% end %>
<div>
    <%= form_with url: {controller: 'roadmaps', action: 'mfini' } do  |f| %>
      <%= f.label :タイトル %>
      <%= f.text_field :content %>
      
      <%= f.label :勉強方法、教材など %>
      <%= f.text_field :method %>
            
      <%= f.label :所要時間 %>
      <%= f.number_field :time_required %>分
              
      <%= f.label :コメント %>
      <%= f.text_area :comment %>
      <%= f.hidden_field :roadmap_id, value: @id %>
     <input type="submit" value="add" name="continue">
  　 <input type="submit" value="更新" name="finish">
    <%end%>
</div>