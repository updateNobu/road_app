<% if flash[:notice]%>
 <div>
   <%= flash[:notice]%>
 </div>
<% end %>
<div>
  <%= @roadmap.title %>
  <%if @current_user%>
      <%if Like.find_by(user_id: @current_user.id, roadmap_id: @roadmap.id)%>
        <%= link_to("いいね！外す", "/like/#{@roadmap.id}/destroyshow", {method: "post"})%>
      <%else%>
        <%= link_to("いいね！する", "/like/#{@roadmap.id}/createshow", {method: "post"})%>
      <%end%>
  <%else%>
      <%= link_to("いいね!", "/login") %>
  <%end%>
  <%= Like.where(roadmap_id: @roadmap.id).count %>
  <%= @user.name %>
  <%= @roadmap.created_at %>
  <%= "勉強時間: 平日#{@roadmap.stady_time_week}時間　休日#{@roadmap.stady_time_week}時間" %>
  <%= "必要期間: 上記のペースで#{@roadmap.period_stady}ケ月ほど"%>
  <%= "合計時間目安: #{@roadmap.total_stady_time}時間" %>
  <%= "コメント: #{@roadmap.total_comment}" %>
</div>
<div>
  <h1>ロードマップ</h1>
  <% @roadmap_shows.each do |show| %>
    <%= show.content %>
    <%= show.method %>
    <%= "#{show.time_required}分" %>
    <%= show.comment %>
  <% end %>
</div>
<%if @current_user && @user.id == @current_user.id %>
  <%= link_to("編集", "/roadmap/edit/#{@roadmap.id}")%>
  <%= link_to("投稿を削除", "/roadmap/destroyall/#{@roadmap.id}", {method: "post"})%>
<%end%>
<%= link_to("投稿一覧", "/roadmap/#{@roadmap.category_id}")%>
