<!--no18-->
<div class="maketitle">
<h3 class="makename">Create roadmap</h3>
</div>
<div class="makesubsub">
<h1 class="makesubsubname">ロードマップ詳細</h1>
</div>
<div class="spaceforpc"></div>
<% @roadmap_shows.each do |show| %>
 <div class="roadmapshow">
    <p class="minititle"><%= "・#{show.content}" %></p>
    <p class="method"><%= "アプローチ：#{show.method}" %></p>
    <% if show.hour_required != 0 %>
    <p class="require"><%= "所要時間：#{show.time_required}時間　#{show.hour_required}分" %></p>
    <%else%>
    <p class="require"><%= "所要時間：#{show.time_required}時間" %></p>
    <%end%>
    <p class="minicomment"><%= "コメント：#{show.comment}" %></p>
    <%= link_to("編集", "/roadmap/editshow/#{show.id}", {class: "showedit"})%>
    <%= link_to("削除", "/roadmap/destroyshow/#{show.id}", {method: "post", class: "showdestroy"}) %>
</div>
<% end %>

<div class="mapshowsubmit">
<div class="mapshowbottom">
    <%= form_with url: {controller: 'roadmaps', action: 'add' } do  |f| %>
      <%= f.label :タイトル：, class: "mstitle"%>
      <%= f.text_field :content, class: "inputmstitle" %>
      
      <%= f.label :勉強方法、教材など：, class: "msmethod" %>
      <%= f.text_field :method, class: "msmethodinput" %>
            
      <%= f.label :所要時間：　　　　　　　　　時間, class: "msrequired" %>
      <%= f.number_field :time_required, class: "msrequiredinput" %>
              
      <%= f.label :コメント：, class: "mscomment" %>
      <%= f.text_area :comment, class: "mscommentinput" %>
      <%= f.hidden_field :roadmap_id, value: @id %>
    </div>
     <input type="submit" value="&#xf055;" name="continue" class="icn_search plus" >
  　 <input type="submit" value="投稿" name="finish" class="mssend">
    </div>
    <%end%>